<UserControl x:Class="PointsOnline.Game"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PointsOnline"
             xmlns:themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             mc:Ignorable="d"
             d:DesignHeight="300"
			 d:DesignWidth="600"
			 Loaded="Game_OnLoaded">

    <UserControl.Resources>

        <SolidColorBrush x:Key="RedTeamPointBrush">#FFFF3434</SolidColorBrush>
        <SolidColorBrush x:Key="RedTeamRegionBrush">#80FF3434</SolidColorBrush>
        <SolidColorBrush x:Key="BlueTeamPointBrush">#FF34A4FF</SolidColorBrush>
        <SolidColorBrush x:Key="BlueTeamRegionBrush">#8034A4FF</SolidColorBrush>
        <SolidColorBrush x:Key="BackgroundPointBrush">#20000000</SolidColorBrush>

        <Storyboard x:Key="GridShowStoryboard">
            <DoubleAnimation Duration="0:0:0.1"
                             Storyboard.TargetProperty="Opacity"
                             To="1">
            </DoubleAnimation>
            <DoubleAnimation Duration="0:0:1"
                             BeginTime="0:0:0.1"
                             Storyboard.TargetProperty="Opacity"
                             To="1" />
            <DoubleAnimation Duration="0:0:0.5"
                             BeginTime="0:0:1.1"
                             Storyboard.TargetProperty="Opacity"
                             To="0" />
        </Storyboard>

    </UserControl.Resources>

    <UserControl.DataContext>
        <local:GameViewMoldel />
    </UserControl.DataContext>

    <local:ScrollBox x:Name="scroll"
                     Background="Transparent"
                     MouseMove="ScrollBox_MouseMove"
                     Dragged="ScrollBox_Dragged">
        <Grid Width="2100"
              Height="2100">
            <Grid Uid="canvasWithGrid" Opacity="0">
                <Grid.Background>
                    <DrawingBrush Viewport="{StaticResource FieldGridRect}"
                                  ViewportUnits="Absolute"
                                  TileMode="Tile">
                        <DrawingBrush.Drawing>
                            <DrawingGroup>
                                <DrawingGroup.Children>
                                    <GeometryDrawing Geometry="M0,0 L30,0">
                                        <GeometryDrawing.Pen>
                                            <Pen Thickness="2"
                                                 Brush="{StaticResource BackgroundPointBrush}" />
                                        </GeometryDrawing.Pen>
                                    </GeometryDrawing>
                                    <GeometryDrawing Geometry="M0,0 L0,30">
                                        <GeometryDrawing.Pen>
                                            <Pen Thickness="2"
                                                 Brush="{StaticResource BackgroundPointBrush}" />
                                        </GeometryDrawing.Pen>
                                    </GeometryDrawing>
                                </DrawingGroup.Children>
                            </DrawingGroup>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                </Grid.Background>
                <!--<Grid.Triggers>
                    <EventTrigger RoutedEvent="MouseMove">
                        <EventTrigger.Actions>
                            <BeginStoryboard>
                                
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
                </Grid.Triggers>-->
            </Grid>
            <Canvas Uid="canvasWithPoints">
                <!--<local:PlanePoint Canvas.Left="0"
                                  Canvas.Top="0" />-->
            </Canvas>
            <Canvas Uid="canvasWithRegions"
                    IsHitTestVisible="False">
            </Canvas>
            <Border BorderBrush="#FF80ba45"
                    BorderThickness="5"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" />
        </Grid>
    </local:ScrollBox>
</UserControl>
